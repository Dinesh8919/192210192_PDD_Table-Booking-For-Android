<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/bookingIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking ID: 1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tableNoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table No: TAB01"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/bookingDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-02-21"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/bookingTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 02:12:23 - 03:12:24"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/amountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: $200"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User: Dinesh kumar reddy Pothula"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: dineshkumarreddyp198@gmail.com"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>