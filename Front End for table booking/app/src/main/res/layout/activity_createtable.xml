<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/style_green_gradient"
    >

    <!-- Table Icon -->
    <ImageView
        android:id="@+id/tableIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <!-- Table Details Buttons -->
    <Button
        android:id="@+id/btnTableNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table Number"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnTableCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table Capacity"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnTableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table Name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnTableDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table Description"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnTableImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table Image"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
