<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/style_green_gradient">

        <RelativeLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:contentDescription="Back" />

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon__1_"
                android:contentDescription="Search" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/actionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/restaurantImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_16"
                    android:contentDescription="Restaurant Image" />

                <TextView
                    android:id="@+id/restaurantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sangeetha Veg Restaurant"
                    android:textSize="18sp"
                    android:textColor="#272727"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/restaurantAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bangalore trunk road, thirumazhisai,
opp KFC, chennai, Tamil Nadu6600124"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />


                <Button
                    android:id="@+id/placeOrderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Place an order. swiggy.com"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="#000000"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <Button
                    android:id="@+id/photosbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Photos"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#272727" />

                <Button
                    android:id="@+id/aboutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="About"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#272727" />

                <Button
                    android:id="@+id/reviewsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Reviews"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#272727" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
